<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <Description>OpenTelemetry instrumentation for MassTransit</Description>
    <PackageTags>$(PackageTags);distributed-tracing;MassTransit</PackageTags>
    <MinVerTagPrefix>Instrumentation.MassTransit-</MinVerTagPrefix>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(RepoRoot)\src\Shared\ActivityExtensions.cs" Link="Includes\ActivityExtensions.cs" />
    <Compile Include="$(RepoRoot)\src\Shared\DiagnosticSourceListener.cs" Link="Includes\DiagnosticSourceListener.cs" />
    <Compile Include="$(RepoRoot)\src\Shared\DiagnosticSourceSubscriber.cs" Link="Includes\DiagnosticSourceSubscriber.cs" />
    <Compile Include="$(RepoRoot)\src\Shared\ExceptionExtensions.cs" Link="Includes\ExceptionExtensions.cs" />
    <Compile Include="$(RepoRoot)\src\Shared\InstrumentationEventSource.cs" Link="Includes\InstrumentationEventSource.cs" />
    <Compile Include="$(RepoRoot)\src\Shared\ListenerHandler.cs" Link="Includes\ListenerHandler.cs" />
    <Compile Include="$(RepoRoot)\src\Shared\SuppressInstrumentationScopeLocal.cs" Link="Includes\SuppressInstrumentationScopeLocal.cs" />

    <PackageReference Include="OpenTelemetry" Version="1.0.0-rc1.1" />
  </ItemGroup>
</Project>