<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(NetFrameworkMinimumSupportedVersion)</TargetFrameworks>
    <Description>.NET Remoting instrumentation for OpenTelemetry.</Description>
    <PackageTags>$(PackageTags);distributed-tracing;Remoting</PackageTags>
    <MinVerTagPrefix>Instrumentation.Remoting-</MinVerTagPrefix>
  </PropertyGroup>

  <PropertyGroup>
    <DisablePackageBaselineValidation>true</DisablePackageBaselineValidation>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="OpenTelemetry.Instrumentation.Remoting.Tests" PublicKey="$(StrongNamePublicKey)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" />
    <PackageReference Include="OpenTelemetry" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(RepoRoot)\src\Shared\AssemblyVersionExtensions.cs" Link="Includes\AssemblyVersionExtensions.cs" />
    <Compile Include="$(RepoRoot)\src\Shared\ExceptionExtensions.cs" Link="Includes\ExceptionExtensions.cs" />
    <Compile Include="$(RepoRoot)\src\Shared\Guard.cs" Link="Includes\Guard.cs" />
    <Compile Include="$(RepoRoot)\src\Shared\SemanticConventions.cs" Link="Includes\SemanticConventions.cs" />
  </ItemGroup>

</Project>
