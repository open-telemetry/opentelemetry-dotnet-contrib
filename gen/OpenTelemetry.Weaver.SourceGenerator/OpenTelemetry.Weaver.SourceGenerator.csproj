<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>$(NetStandardMinimumSupportedVersion)</TargetFramework>
    <DisablePackageBaselineValidation>true</DisablePackageBaselineValidation>
    <IsPackable>false</IsPackable>
    <AnalyzerLanguage>cs</AnalyzerLanguage>
    <ImplicitUsings>false</ImplicitUsings>
    <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <!-- The following libraries include the source generator interfaces and types we need -->
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="4.14.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\*\*.md" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\OpenTelemetry.Weaver.Core\GenerationMode.cs" Link="Includes\GenerationMode.cs" />
    <Compile Include="..\OpenTelemetry.Weaver.Core\Properties.cs" Link="Includes\Properties.cs" />
    <Compile Include="..\OpenTelemetry.Weaver.Core\SourceGenerationHelper.cs" Link="Includes\SourceGenerationHelper.cs" />
    <Compile Include="..\OpenTelemetry.Weaver.Core\StringBuilderExtensions.cs" Link="Includes\StringBuilderExtensions.cs" />
  </ItemGroup>

</Project>
