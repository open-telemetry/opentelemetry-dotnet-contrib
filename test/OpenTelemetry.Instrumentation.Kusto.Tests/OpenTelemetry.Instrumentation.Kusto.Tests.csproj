<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(SupportedNetTargets)</TargetFrameworks>
    <TargetFrameworks Condition="$(OS) == 'Windows_NT'">$(TargetFrameworks);$(NetFrameworkMinimumSupportedVersion)</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.Kusto.Data" />
    <PackageReference Include="OpenTelemetry.Exporter.InMemory" />
    <PackageReference Include="Testcontainers.Kusto" />
    <PackageReference Include="Verify.Xunit" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(RepoRoot)\src\OpenTelemetry.Instrumentation.Kusto\OpenTelemetry.Instrumentation.Kusto.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(RepoRoot)\test\Shared\DockerHelper.cs" Link="Implementation\DockerHelper.cs" />
    <Compile Include="$(RepoRoot)\test\Shared\DockerPlatform.cs" Link="Implementation\DockerPlatform.cs" />
    <Compile Include="$(RepoRoot)\test\Shared\EnabledOnDockerPlatformFactAttribute.cs" Link="Implementation\EnabledOnDockerPlatformFactAttribute.cs" />
    <Compile Include="$(RepoRoot)\test\Shared\EnabledOnDockerPlatformTheoryAttribute.cs" Link="Implementation\EnabledOnDockerPlatformTheoryAttribute.cs" />
    <Compile Include="$(RepoRoot)\test\Shared\SkipUnlessEnvVarFoundFactAttribute.cs" Link="Implementation\SkipUnlessEnvVarFoundFactAttribute.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="kusto.Dockerfile" LogicalName="kusto.Dockerfile" />
  </ItemGroup>

  <ItemGroup>
    <!--
      Verify adds an implicit using for the test framework, however because we use shared files, remove it to avoid
      an unnecessary using warning.
     -->
    <Using Remove="Xunit" />
  </ItemGroup>

</Project>
